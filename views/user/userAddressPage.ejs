<%-include('../../views/partials/user/header')%>
<nav class="breadcrumbs mt-3 mb-3 container">
    <a href="/userProfile" class="breadcrumbs-txt" style="text-decoration: none;">My Profile</a>&gt;
    <a href="/userAddress" class="breadcrumbs-txt" style="text-decoration: none;">My Address</a>
</nav>

<div class="container-fluid" id="div1">
    <div class="col-md-12">
        <div class="border-info px-3 mt-4" style="border:0.15rem solid; border-top-left-radius: 5px;border-top-right-radius: 5px;border-bottom-left-radius: 15px;border-bottom-right-radius: 15px; font-family: monospace;">
           <div class="border-info mx-3 my-3 px-3 py-3">
               <a href="/addAddress"><h1>ADD A NEW ADDRESS</h5></a>
           </div>
        </div>
    </div>
</div>


<div class="container-fluid" id="div1">
    <div class="col-md-12">
        <div class="border-info px-3 mt-4" style="border:0.15rem solid; border-top-left-radius: 5px;border-top-right-radius: 5px;border-bottom-left-radius: 15px;border-bottom-right-radius: 15px; font-family: monospace;">
           <div class="border-info mx-3 my-3 px-3 py-3">
               <% if(userAddress){ %>
                <% userAddress.address.forEach((address) => { %>
                <div class="container-fluid" id="div1">
                    <div class="col-md-12">
                        <div class="border-info px-3 mt-4" style="border:0.15rem solid; border-top-left-radius: 5px;border-top-right-radius: 5px;border-bottom-left-radius: 15px;border-bottom-right-radius: 15px; font-family: monospace;">
                           <div class="border-info mx-3 my-3 px-3 py-3">
                               <div class="card-header">
                                <h5 class="mb-0"><%=address.addressType%></h5>
                               </div>
                               <div class="card-body">
                                <address>
                                    <%=address.name%><br/>
                                    <%=address.city%><br/>
                                    <%=address.landMark%><br/>
                                    <%=address.state%>
                                </address>
                                <p><%=address.pincode%></p>
                                <p><%=address.phone%></p>
                                <p><%=address.altPhone%></p>
                                <div class="d-flex justify-content-between">
                                    <a href="/editAddress?id=<%=address._id%>" class="btn-small">Edit</a>
                                    <a href="/deleteAddress?id=<%=address._id%>" class="btn-small" onclick="return confirm('Are you sure? Do you want to delete this address?')">Delete</a>
                                </div>
                               </div>
                           </div>
                        </div>
                    </div>
                </div>
               <% }) %>
               <% }else{ %>
                <div class="container-fluid" id="div1">
                    <div class="col-md-12">
                        <div class="border-info px-3 mt-4" style="border:0.15rem solid; border-top-left-radius: 5px;border-top-right-radius: 5px;border-bottom-left-radius: 15px;border-bottom-right-radius: 15px; font-family: monospace;">
                           <div class="border-info mx-3 my-3 px-3 py-3">
                               <h5>No address found</h5>
                           </div>
                        </div>
                    </div>
                </div>
               <% } %>
           </div>
        </div>
    </div>
</div>



<%-include('../../views/partials/user/footer')%>