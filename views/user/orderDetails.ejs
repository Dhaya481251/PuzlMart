        <script>
document.querySelectorAll(".star-rating .star").forEach(star => {
    star.addEventListener("click", function() {
        let rating = this.getAttribute("data-value");
        
        this.closest("form").querySelector("#rating").value = rating;
        
        let stars = this.closest(".star-rating").querySelectorAll(".star");
        stars.forEach(star => {
            if (parseInt(star.getAttribute("data-value")) <= rating) {
                star.classList.add("selected");
                star.style.color = 'yellow';
            } else {
                star.classList.remove("selected");
                star.style.color = 'black';
            }
        });
    });
});


const cancelBtn = document.getElementById('cancelBtn');
const cancelDiv = document.getElementById('cancelDiv');
const returnDiv = document.getElementById('returnDiv');
const returnBtn = document.getElementById('returnBtn');
if('<%=orders.status%>' === 'Pending' || '<%=orders.status%>' === 'Processing'){
    cancelBtn.style.display = 'block';
    returnBtn.style.display = 'none';
}

if('<%=orders.status%>' === 'Delivered'){
    returnBtn.style.display = 'Block';
    cancelBtn.style.display = 'none';
}
if('<%=orders.status%>' === 'Shipped'){
    cancelBtn.style.display = 'none';
    returnBtn.style.display = 'none'
}
if('<%=orders.status%>' === 'Cancelled'){
    cancelBtn.style.display = 'none';
    returnBtn.style.display = 'none'
}
if('<%=orders.status%>' === 'Returned'){
    cancelBtn.style.display = 'none';
    returnBtn.style.display = 'none'
}
cancelBtn.addEventListener('click',()=>{
    cancelBtn.style.display = 'none';
    cancelDiv.style.display = 'block';
    returnDiv.style.display = 'none';
});

returnBtn.addEventListener('click',() => {
    returnBtn.style.display = 'none';
    returnDiv.style.display = 'block';
    cancelDiv.style.display = 'none';
});

document.querySelectorAll("#cancelDiv form, #returnDiv form,#rateDiv .rate-form").forEach(form => {
        form.addEventListener("submit", function(event) {
            event.preventDefault();

            let formData = {};
            const formElements = this.elements;

            for (let element of formElements) {
                if (element.name) {
                    formData[element.name] = element.value;
                }
            }

            console.log("Form data being sent:", formData);

            fetch(this.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                    Swal.fire({
                        icon: data.type,
                        title: data.message,
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.reload();
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Something went wrong!',
                        showConfirmButton: false,
                        timer: 1500
                    });
                });
        });
    });
</script>
        
