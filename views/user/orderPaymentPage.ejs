    <style>
/* Main navbar styling */
.navbar {
    background-color: #42ADA8;
    border-bottom-left-radius: 25px;
    border-bottom-right-radius: 25px;
    padding: 1rem;
}

/* Adjusting the navbar links */
.nav-link {
    
    font-size: 20px;
    font-weight: bold;
}
.navbar-dark .navbar-nav .nav-link {
    color: #2dbbb4;
}
.nav-item a{
    color: #2dbbb4;
    font-size: 20px;
    font-weight: bold;
}

/* Styling for individual nav items */
.nav-item {
    background-color: #D6F9F9;
    
    border-radius: 15px; /* Simplified radius to work better on smaller screens */
}

/* Adding gap between navbar items */
.navbar-nav {
    gap: 1.5rem; /* Reduced gap for better spacing on smaller screens */
}

/*.login-btn{
    min-width: 4rem;
    height: 2.5rem;
    margin-top: 0.25rem;
    text-align: center;
    padding-top: 0.25rem;
}*/

/* Search form styling */
.form-inline.search{
    flex-grow: 0;
    display: flex;
    margin-left: 1rem;
}
.form-control {
    background: #D6F9F9;
    border-bottom-left-radius: 15px;
    border: none;
    width: 100%;
}

.search-btn {
    background-color: #D6F9F9;
    border-bottom-right-radius: 15px;
    border: none;
    padding: 0.375rem 1.5rem;
    width: auto;
}
/* Responsive design for smaller screens */
@media (max-width: 768px) {
    .navbar {
        padding: 0.5rem 1rem;
        
    }
    .search{
        display: flex;
    }
    .nav-link {
        font-size: 18px; /* Slightly smaller font size */
    }

    .form-control {
        width: 100%; /* Full width for the search bar on smaller screens */
    }

    .navbar-nav {
        gap: 1rem; /* Less gap between items */
    }

    .search-btn {
        padding: 0.3rem 1rem; /* Adjust button padding */
    }

    .navbar-brand img {
        max-width: 150px; /* Adjust logo size */
    }
    
}

/* Additional responsive tweaks for mobile devices */
@media (max-width: 576px) {
    .nav-link {
        font-size: 16px;
    }

    .form-control {
        width: 100%; 
        margin-bottom: 0; 
    }

    .navbar-nav {
        flex-direction: column; /* Stack the nav items vertically on mobile */
        text-align: center; /* Center the nav links */
    }

    .nav-item {
        margin-bottom: 0.5rem; /* Spacing between stacked nav items */
    }
    .search-btn{
        width: auto;
    }
}

footer {
    background-color: #77C8C4;
    color: white;
    margin-top: 4rem;
}

footer h5 {
    font-size: 40px;
    margin-bottom: 20px;
}

footer p {
    font-size: 14px;
}
.copyright{
    font-size: 45px;
}
    </style>

