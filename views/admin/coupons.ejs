<%-include('../../views/partials/admin/header')%>
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Coupons</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active"><a href="/admin/coupons">Coupons</a></li>
      </ol>
    </nav>
  </div>
  
  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Coupons</h5>
            <div>
              <a
                href="/admin/addCoupon"
                class="btn btn-primary"
                style="border: none; text-decoration: none; background: #e7ab3c"
                >Add New Coupon</a
              >
            </div>
            <% if(coupons.length > 0){ %>
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Coupon code</th>
                  <th>Minimum Price</th>
                  <th>Expires on</th>
                  <th>Discount Type</th>
                  <th>Discount</th>
                  <th>Usage Limit</th>
                  <th>Usage Count</th>
                  <th>Status</th>
                  <th>Activate/Deactivate</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% coupons.forEach(coupon => { %>
                <tr id="coupon-<%=coupon._id%>">
                  <td><%=coupon.name%></td>
                  <td><%=coupon.code%></td>
                  <td><%=coupon.minimumPrice%></td>
                  <td><%=new Date(coupon.expireOn).toDateString()%></td>
                  <td><%=coupon.discountType%></td>
                  <td>
                    <% if(coupon.discountType === 'Percentage'){ %>
                    <%=coupon.discount%>% <% }else{ %> Rs <%=coupon.discount%>
                    <% } %>
                  </td>
                  <td><%=coupon.usageLimit%></td>
                  <td><%=coupon.usedCount%></td>
                  <td>
                    <% if(coupon.isActive){ %>
                    <span
                      class="badge rounded-pill alert-success"
                      style="width: 60px; background-color: green"
                      >Active</span
                    >
                    <% }else{ %>
                    <span
                      class="badge rounded-pill alert-success"
                      style="width: 60px; background-color: red"
                      >Inactive</span
                    >
                    <% } %>
                  </td>
                  <td class="text-start">
                    <% if(coupon.isActive){ %>
                    <button class="btn btn-danger btn-sm">
                      <a
                        href="/admin/inactiveCoupon?id=<%=coupon._id%>"
                        class="text-white"
                        >Inactive</a
                      >
                    </button>
                    <% }else{ %>
                    <button class="btn btn-success btn-sm">
                      <a
                        href="/admin/activeCoupon?id=<%=coupon._id%>"
                        class="text-white"
                        >Active</a
                      >
                    </button>
                    <% } %>
                  </td>
                  <td>
                    <button
                      class="btn btn-danger btn-sm"
                      onclick="removeCoupon('<%=coupon._id%>')"
                    >
                      Remove
                    </button>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <% }else{ %>
            <h3>No coupon is added</h3>
            <% } %>
          </div>
          <div class="container mt-3">
            <nav aria-label="Page navigation">
              <ul
                class="pagination justify-content-center mb-20"
                style="margin-right: 200px"
              >
                <% for(let i=1 ; i<=totalPages ; i++){ %>
                <li class="page-item <%=(i===currentPage)? 'active' : ''%>">
                  <a class="page-link" href="?page=<%=i%>"><%= i %></a>
                </li>
                <% } %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script>
  function removeCoupon(couponId) {
    const confirmation = Swal.fire({
      title: "Are you sure?",
      text: "Do you want to delete the coupon?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes Delete it!",
      cancelButtonText: "Cancel",
      reverseButtons: true,
    }).then((result) => {
      if (result.isConfirmed) {
        fetch(`/admin/removeCoupon/${couponId}`, {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => {
            if (response.ok) {
              Swal.fire(
                "Removed",
                "The coupon was removed successfully",
                "success"
              ).then(() => location.reload());
            } else {
              Swal.fire(
                "Error!",
                "Failed to remove the coupon. Please try again.",
                "error"
              );
            }
          })
          .catch((error) => {
            console.error("Error : ", error);
            Swal.fire(
              "Error!",
              "An error occurred while trying to remove the coupon",
              "error"
            );
          });
      }
    });
  }
</script>

<%-include('../../views/partials/admin/footer')%>
