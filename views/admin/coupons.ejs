    cancelButtonText:'Cancel',
    reverseButtons:true
  }).then((result) => {
    if(result.isConfirmed){
      fetch(`/admin/removeCoupon/${couponId}`,{
        method:'DELETE',
        headers:{
          'Content-Type':'application/json'
        }
      })
      .then(response => {
        if(response.ok){
          Swal.fire('Removed','The coupon was removed successfully','success')
          .then(() => location.reload());
        }else{
