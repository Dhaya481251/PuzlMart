<script>
  document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll('.approve-btn').forEach(button => {
          button.addEventListener('click', async (event) => {
             event.preventDefault();
             const orderId = button.getAttribute('data-order-id');
             await handleReturnAction(orderId, 'approve');
          });
      });
      document.querySelectorAll('.decline-btn').forEach(button => {
          button.addEventListener('click', async (event) => {
             event.preventDefault();
             const orderId = button.getAttribute('data-order-id');
             await handleReturnAction(orderId, 'decline');
          });
      });
  });
  async function handleReturnAction(orderId, action) {
  try {
      const response = await fetch(`/admin/handleReturnRequest/${orderId}`, {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify({ action })
      });
      const result = await response.json();
      
      
      Swal.fire({
          icon: result.type === 'success' ? 'success' : 'error',
          title: result.type === 'success' ? 'Success' : 'Error',
          text: result.message,
          showConfirmButton: true
      }).then(() => location.reload());
      
  } catch (error) {
      console.error('Error handling return action:', error);
      
      
      Swal.fire({
          icon: 'error',
          title: 'Something went wrong!',
          text: 'An error occurred while processing the return request. Please try again.',
          showConfirmButton: true
      });
  }
}
</script>

