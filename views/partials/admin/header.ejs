      <div class="search-bar">
        <form
          class="search-form d-flex align-items-center"
          method="POST"
          action="/admin/search"
        >
          <select
            name="type"
            title="Select search type"
            style="
              background: #e7ab3c;
              color: white;
              width: 10rem;
              height: 2rem;
              border: none;
              border-top-left-radius: 5px;
              border-bottom-left-radius: 5px;
            "
            required
          >
            <option value="users">Users</option>
            <option value="categories">Categories</option>
            <option value="brands">Brands</option>
            <option value="products">Products</option>
            <option value="orders">Orders</option>
            <option value="coupons">Coupons</option>
            <option value="offers">Offers</option>
          </select>
          <input
            type="text"
            name="query"
            placeholder="Search"
            title="Enter search keyword"
            required
          />
          <button type="submit" title="Search">
            <i class="bi bi-search"></i>
          </button>
        </form>
      </div>

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item d-block d-lg-none">
            <a class="nav-link nav-icon search-bar-toggle" href="#">
              <i class="bi bi-search"></i>
            </a>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
              <i class="bi bi-bell"></i>
              <span class="badge bg-primary badge-number"
                ><%=notifications.length%></span
              >
            </a>

            <ul
              class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications"
              style="overflow-y: auto; max-height: 420px"
            >
              <li class="dropdown-header">
                You have <%=notifications.length%> new notifications
              </li>
              <% if(notifications && notifications.length > 0){ %> <%
              notifications.forEach(notification => { %>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li class="notification-item">
                <% if(notification.orderId.returnStatus === 'Pending'){ %>
                <i class="bi bi-exclamation-circle text-warning"></i>
                <div>
                  <h4>
                    A return request for order <%= notification.orderId.orderId
                    %>
                  </h4>
                  <p>
                    Return reason : <%= notification.orderId.returnReason %>
                  </p>
                  <form
                    action="/admin/handleReturnRequest/<%=notification.orderId%>"
                    method="POST"
                  >
                    <div>
                      <a
                        href="#"
                        class="approve-btn btn-success px-1 py-1"
                        style="border-radius: 5px"
                        data-order-id="<%= notification.orderId._id %>"
                        >Approve</a
                      >
                      <a
                        href="#"
                        class="decline-btn btn-danger px-1 py-1"
                        style="border-radius: 5px"
                        data-order-id="<%= notification.orderId._id %>"
                        >Decline</a
                      >
                    </div>
                  </form>
                </div>
                <% }else{ %>
                <i class="bi bi-exclamation-circle text-success"></i>
                <div>
                  <h4>
                    A return request for order <%= notification.orderId.orderId
                    %>
                  </h4>
                  <p>
                    Return reason : <%= notification.orderId.returnReason %>
                  </p>

                  <p>
                    Return Status : <%= notification.orderId.returnStatus %>
                  </p>
                </div>
                <% } %>
              </li>
              <% }) %> <% }else{ %>
              <h5>No notification</h5>
              <% } %>
            </ul>
          </li>
          <li class="nav-item dropdown pe-3">
            <a
